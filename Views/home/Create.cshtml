@model EmlpoyeeMgt.ViewModels.EmployeeCreateModel
@inject IEmployeeRepository _employeeRepository  
@{
    ViewBag.Title="Create Employee";
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post">
    <div class="">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="">
        <label >Choose File</label>
        <input asp-for="Photo" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="">
        <label asp-for="Department"></label>
        <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" >
            <option value="">Please Select</option>
        </select>
        <span asp-validation-for="Department"></span>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="dd">
        <button type="submit" >Create</button> 
    </div>
</form>